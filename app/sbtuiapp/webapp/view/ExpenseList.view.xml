<mvc:View
    controllerName="sbtuiapp.controller.ExpenseList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page title="Expenses">
        <content>
            <Table
                id="expenseTable"
                items="{expenseModel>/Expenses}"
                inset="false"
                growing="true"
                growingScrollToLoad="true">

                <headerToolbar>
                    <Toolbar>
                        <Title text="Expense List"/>
                        <ToolbarSpacer/>
                        <SearchField width="40%" liveChange=".onSearch"/>
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column><Text text="Title"/></Column>
                    <Column hAlign="End"><Text text="Amount"/></Column>
                    <Column><Text text="Currency"/></Column>
                    <Column><Text text="Date"/></Column>
                    <Column><Text text="Notes"/></Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{expenseModel>title}"/>
                            <ObjectNumber number="{expenseModel>amount}" emphasized="true"/>
                            <Text text="{expenseModel>currency}"/>
                            <Text text="{expenseModel>expenseDate}"/>
                            <Text text="{expenseModel>notes}"/>
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
        </content>

    </Page>

</mvc:View>
